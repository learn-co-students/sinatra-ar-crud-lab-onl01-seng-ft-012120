<h1>Create a new article:</h1>
<form action="/articles" method="POST">
    <label for="article_title">Article's title:</label>
    <br>
    <input id="article_title" type="text" name="title">
    <br>
    <br>
    <label for="article_content">Enter the article's content:</label>
    <br>
    <textarea name="content" id="article_content"></textarea>
    <br>
    <br>
    <input type="submit"/>
</form>